{
    "$schema": "https://ui.shadcn.com/schema.json",
    "style": "new-york",
    "rsc": true,
    "tsx": true,
    "tailwind": {
        "config": "app/globals.css",
        "css": "app/globals.css",
        "baseColor": "neutral",
        "cssVariables": true,
        "prefix": ""
    },
    "aliases": {
        "components": "@/components",
        "utils": "@/lib/utils",
        "ui": "@/components/ui",
        "lib": "@/lib",
        "hooks": "@/hooks"
    },
    "iconLibrary": "lucide",
    "registries": {
        "@shadcndesign": {
            "url": "https://shadcndesign-registry.vercel.app/api/registry/{name}",
            "headers": {
                "X-License-Key": "${SHADCNDESIGN_LICENSE_KEY}"
            }
        }
    }
}
