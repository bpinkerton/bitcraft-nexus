{
    "name": "bitcraft-nexus",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "pnpm --filter web dev",
        "dev:web": "pnpm --filter web dev",
        "dev:bot": "pnpm --filter discord-bot dev",
        "dev:all": "pnpm --parallel --filter web dev & pnpm --parallel --filter discord-bot dev",
        "build": "pnpm -r build",
        "build:web": "pnpm --filter web build",
        "build:bot": "pnpm --filter discord-bot build",
        "start": "pnpm --filter web start",
        "start:web": "pnpm --filter web start",
        "start:bot": "pnpm --filter discord-bot start",
        "lint": "pnpm -r lint",
        "lint:web": "pnpm --filter web lint",
        "lint:bot": "pnpm --filter discord-bot lint",
        "test": "pnpm -r test",
        "test:web": "pnpm --filter web test",
        "test:bot": "pnpm --filter discord-bot test",
        "prepare": "pnpx husky",
        "commitlint": "commitlint --edit",
        "env:setup": "tsx scripts/env-setup.ts",
        "env:setup:supabase": "tsx scripts/modules/supabase.ts",
        "env:setup:spacetime": "tsx scripts/modules/spacetime.ts",
        "env:setup:spacetime:bindings": "tsx scripts/modules/spacetime-bindings.ts",
        "env:setup:spacetime:auth": "tsx scripts/modules/spacetime-auth.ts",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:push": "drizzle-kit push",
        "db:studio": "drizzle-kit studio",
        "db:drop": "drizzle-kit drop",
        "clean": "pnpm -r clean",
        "clean:web": "pnpm --filter web clean",
        "clean:bot": "pnpm --filter discord-bot clean",
        "clean:shared": "pnpm --filter @bitcraft/shared clean",
        "clean:database": "pnpm --filter @bitcraft/database clean",
        "deploy:web": "pnpm --filter web build && pnpm --filter web start",
        "deploy:bot": "pnpm --filter discord-bot build && pnpm --filter discord-bot start",
        "deploy:all": "pnpm -r build && pnpm --parallel --filter web start & pnpm --parallel --filter discord-bot start"
    },
    "dependencies": {
        "@clockworklabs/spacetimedb-sdk": "^1.3.3",
        "@dotenvx/dotenvx": "^1.51.0",
        "@supabase/ssr": "latest",
        "@supabase/supabase-js": "latest",
        "deep-equal": "^2.2.3",
        "drizzle-orm": "^0.44.6",
        "postgres": "^3.4.7",
        "spacetimedb": "^1.3.3"
    },
    "devDependencies": {
        "@clack/prompts": "^0.11.0",
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@eslint/eslintrc": "^3",
        "@types/deep-equal": "^1.0.4",
        "@types/node": "^20",
        "drizzle-kit": "^0.31.5",
        "supabase": "^2.48.3",
        "tsx": "^4.20.6",
        "typescript": "^5"
    }
}
